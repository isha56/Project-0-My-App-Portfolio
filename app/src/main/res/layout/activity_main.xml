<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.myappportfolio.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_18dp"
            android:layout_marginTop="@dimen/dimen_36dp"
            android:gravity="center"
            android:text="My Nanodegree Apps!"
            android:textSize="@dimen/dimen_28sp" />

        <Button
            style="@style/custom"
            android:text="@string/popular_movies" />

        <Button
            style="@style/custom"
            android:text="@string/stock_hawk" />

        <Button
            style="@style/custom"
            android:text="@string/build_it_bigger" />

        <Button
            style="@style/custom"
            android:text="@string/make_your_app_material" />

        <Button
            style="@style/custom"
            android:text="@string/go_ubiquitous" />

        <Button
            style="@style/CustomHighlight"
            android:text="@string/capstone" />

    </LinearLayout>
</ScrollView>