<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="custom">
        <item name="android:layout_width">@dimen/dimen_243dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:onClick">displayToast</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/dimen_8dp</item>
        <item name="android:background">@color/tomatoRed</item>
    </style>

    <style name="CustomHighlight">
        <item name="android:layout_width">@dimen/dimen_243dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:onClick">displayToast</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/dimen_8dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>
